# API â€“ development Dockerfile
FROM python:3.13-slim

WORKDIR /app

# Install curl and uv
RUN apt-get update && apt-get install -y --no-install-recommends curl && rm -rf /var/lib/apt/lists/* \
    && curl -LsSf https://astral.sh/uv/install.sh | env UV_INSTALL_DIR=/usr/local/bin sh

# Copy dependency list and minimal package structure (so Docker caches installs)
COPY pyproject.toml uv.lock README.md ./
COPY app/ ./app/

# Install dependencies into container
RUN uv sync --extra dev

# Copy migration entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Mount source code in docker-compose, so don't COPY here
# (this allows live reload with --reload)

# Expose the dev port
EXPOSE 8000

# Use entrypoint to run migrations before starting
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]

# Run FastAPI dev server with live reload
CMD ["uv", "run", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
